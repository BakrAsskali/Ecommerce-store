{% extends 'base.html.twig' %}

{% block title %}CONNEXION{% endblock %}

{% block body %}
<div>
    <h1>Formulaire de Connexion</h1>
    {% if error %}
        <div>
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}
    {% for message in app.flashes('edited') %}
        <div>
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('success') %}
        <div>
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('danger') %}
        <div>
            {{ message }}
        </div>
    {% endfor %}
    <form action="{{ path('security.login') }}" method="post">
        <div>
            <label for="username">Adresse Email</label>
            <input type="email"  id="username" name="_username" placeholder="email" value="{{ last_username }}">
            <small id="emailHelp">We'll never share your email with anyone else.</small>
        </div>
        <div>
            <label for="password">Mot de passe</label>
            <input type="password" id="password" name="_password" placeholder="*********">
        </div>
        <button type="submit">Se Connecter</button>
        <div>
            <a href="{{ path('security.registration') }}">Cr√©er Votre Compte</a>
        </div>
        <div>
            <small id="registration_help">Pas de compte?</small>
        </div>
    </form>
</div>
{% endblock %}
