{% extends 'base.html.twig' %}
{% block title %}Ajouter Produit{% endblock %}
{% block body %}
    <a href="#" onclick="history.back();">
        <i></i>
        <span>Retour</span>
    </a>
    {{ form_start(form) }}
    <div>
        {{ form_label(form.name) }}
        {{ form_widget(form.name) }}
        <div style="color:red;"><b>{{ form_errors(form.name) }}</b></div>
    </div>
    <div>
        {{ form_label(form.price) }}
        {{ form_widget(form.price) }}
        <div style="color:red;"><b>{{ form_errors(form.price) }}</b></div>
    </div>
    <div>
        {{ form_label(form.description) }}
        {{ form_widget(form.description) }}
        <div style="color:red;"><b>{{ form_errors(form.description) }}</b></div>
    </div>
    <div>
        {{ form_label(form.brochure) }}
        {{ form_widget(form.brochure) }}
        <div style="color:red;"><b>{{ form_errors(form.brochure) }}</b></div>
    </div>
    <div>
        {{ form_label(form.category) }}
        {{ form_widget(form.category) }}
        <div style="color:red;"><b>{{ form_errors(form.category) }}</b></div>
    </div>
    <div>
        {{ form_row(form.save) }}
    </div>
    {{ form_end(form) }}
{% endblock %}
